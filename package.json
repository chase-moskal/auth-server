{
	"private": true,
	"name": "auth-server",
	"version": "0.0.0-dev.2",
	"description": "example standalone auth server",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"main": "dist/main.js",
	"scripts": {
		"prepare": "run-s clean build test",
		"clean": "rm -rf dist && mkdir dist",
		"build": "tsc && run-p build-account-popup build-token-storage",
		"build-account-popup": "browserify dist/clientside/account-popup-script.js > dist/clientside/account-popup-script.bundle.js",
		"build-token-storage": "browserify dist/clientside/token-storage-script.js > dist/clientside/token-storage-script.bundle.js",
		"watch": "tsc -w",
		"generate-keys": "./node_modules/authoritarian/generate-keys && mv private.pem config/auth-server.private.pem && mv public.pem config/auth-server.public.pem",
		"start": "node dist/main",
		"test": "jest --verbose dist"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/authoritarian-client.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/authoritarian-client/issues"
	},
	"homepage": "https://github.com/chase-moskal/authoritarian-client#readme",
	"dependencies": {
		"@koa/cors": "^3.0.0",
		"authoritarian": "0.0.0-dev.34",
		"crosscall": "0.0.6-dev.13",
		"express": "^4.17.1",
		"google-auth-library": "^5.5.1",
		"koa": "^2.11.0",
		"koa-bodyparser": "^4.2.1",
		"koa-mount": "^4.0.0",
		"koa-static": "^5.0.0",
		"mongodb": "^3.3.3",
		"passport": "^0.4.0",
		"passport-google-oauth": "^2.0.0",
		"pug": "^2.0.4",
		"renraku": "0.0.0-dev.18",
		"sinon": "^7.5.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/gapi.auth2": "^0.0.50",
		"@types/jest": "^24.0.22",
		"@types/koa": "^2.0.52",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-compose": "^3.2.5",
		"@types/koa-mount": "^4.0.0",
		"@types/koa-static": "^4.0.1",
		"@types/koa__cors": "^2.2.3",
		"@types/mongodb": "^3.3.10",
		"@types/node": "^12.12.7",
		"@types/passport": "^1.0.1",
		"@types/passport-google-oauth": "^1.0.41",
		"@types/pug": "^2.0.4",
		"browserify": "^16.5.0",
		"jest": "^24.9.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^3.7.2"
	}
}
