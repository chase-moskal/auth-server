{
	"private": true,
	"name": "auth-server",
	"version": "0.0.0-dev.0",
	"description": "example standalone auth server",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"main": "dist/main",
	"scripts": {
		"prepare": "run-s clean && run-p build-server build-clientside && run-s test",
		"clean": "rm -rf dist && mkdir dist",
		"build-server": "tsc",
		"build-clientside": "tsc -p source/clientside && run-p build-clientside-login-script build-clientside-token-script",
		"build-clientside-login-script": "browserify dist/clientside/login-script.js > dist/clientside/login-script.bundle.js",
		"build-clientside-token-script": "browserify dist/clientside/token-script.js > dist/clientside/token-script.bundle.js",
		"watch": "tsc -w",
		"start": "node dist/main",
		"test": "exit 0"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/authoritarian-client.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/authoritarian-client/issues"
	},
	"homepage": "https://github.com/chase-moskal/authoritarian-client#readme",
	"dependencies": {
		"@types/koa-route": "3.2.4",
		"authoritarian": "file:../authoritarian/authoritarian-0.0.0-dev.8.tgz",
		"crosscall": "file:../crosscall/crosscall-0.0.6-dev.0.tgz",
		"express": "4.16.4",
		"fancyfs": "file:../fancyfs/fancyfs-0.0.0-dev.1.tgz",
		"google-auth-library": "3.0.1",
		"koa": "2.7.0",
		"koa-bodyparser": "4.2.1",
		"koa-mount": "4.0.0",
		"koa-route": "3.2.0",
		"koa-router": "7.4.0",
		"koa-static": "5.0.0",
		"koa-static-server": "1.4.0",
		"passport": "0.4.0",
		"passport-google-oauth": "1.0.0",
		"pug": "2.0.3"
	},
	"devDependencies": {
		"@types/express": "4.16.1",
		"@types/koa": "2.0.48",
		"@types/koa-bodyparser": "4.2.1",
		"@types/koa-mount": "3.0.1",
		"@types/koa-router": "7.0.39",
		"@types/koa-static": "4.0.0",
		"@types/koa-static-server": "1.3.0",
		"@types/node": "10.12.21",
		"@types/passport": "1.0.0",
		"@types/passport-google-oauth": "1.0.39",
		"@types/pug": "2.0.4",
		"browserify": "16.2.3",
		"npm-run-all": "4.1.5",
		"typescript": "3.3.1"
	}
}
