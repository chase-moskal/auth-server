
doctype html
html
	head
		meta(charset="utf-8")
		title Account popup

	body
		h1 Account popup
		div(id="google-signin")
		a(id="google-signout" href="#" onclick="signOut()" style="display: none;") Sign out

		script.
			window.settings = !{JSON.stringify(locals.settings)}
			function googleReady() {
				if (window.start) start()
				else window.startReady = true
			}

		script(async defer type="importmap-shim" src="importmap.json")
		script(async defer type="module-shim" src="account-popup-script.js")
		script(async defer src="https://unpkg.com/es-module-shims@0.4.6/dist/es-module-shims.js")

		script(async defer src="https://apis.google.com/js/platform.js?onload=googleReady")
